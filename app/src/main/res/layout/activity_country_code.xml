<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Auth.CountryCodeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg_dark"
        android:padding="15dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_ic"
            app:tint="@color/grey2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a country"
            android:textColor="@color/white"
            android:fontFamily="@font/f_medium"
            android:textSize="@dimen/_15sdp"
            android:layout_marginStart="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/india"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flag_circle_ic"
                        app:tint="@color/my_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:textColor="@color/white"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="15dp"/>

                    <ImageView
                        android:id="@+id/checkImg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_ic"
                        app:tint="@color/my_green"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey2"/>

                <LinearLayout
                    android:id="@+id/pakistan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flag_circle_ic"
                        app:tint="@color/my_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pakistan"
                        android:textColor="@color/white"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+92"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="15dp"/>

                    <ImageView
                        android:id="@+id/checkImg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_ic"
                        app:tint="@color/my_green"
                        android:visibility="invisible"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey2"/>

                <LinearLayout
                    android:id="@+id/southAfrica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flag_circle_ic"
                        app:tint="@color/my_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="South Africa"
                        android:textColor="@color/white"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+27"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="15dp"/>

                    <ImageView
                        android:id="@+id/checkImg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_ic"
                        app:tint="@color/my_green"
                        android:visibility="invisible"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey2"/>

                <LinearLayout
                    android:id="@+id/uk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flag_circle_ic"
                        app:tint="@color/my_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United Kingdom"
                        android:textColor="@color/white"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+44"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="15dp"/>

                    <ImageView
                        android:id="@+id/checkImg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_ic"
                        app:tint="@color/my_green"
                        android:visibility="invisible"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey2"/>
                <LinearLayout
                    android:id="@+id/usa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flag_circle_ic"
                        app:tint="@color/my_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United States"
                        android:textColor="@color/white"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1"
                        android:textColor="@color/grey2"
                        android:fontFamily="@font/f_medium"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="15dp"/>

                    <ImageView
                        android:id="@+id/checkImg5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_ic"
                        app:tint="@color/my_green"
                        android:visibility="invisible"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>